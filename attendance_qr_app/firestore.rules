rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own document
      allow read: if isAuthenticated() && request.auth.uid == userId;

      // Only allow creation during signup
      allow create: if isAuthenticated() && request.auth.uid == userId;

      // Users can update their own profile (except role)
      allow update: if isAuthenticated() &&
                      request.auth.uid == userId &&
                      request.resource.data.role == resource.data.role;

      // No delete allowed
      allow delete: if false;
    }

    // Schedules collection
    match /schedules/{scheduleId} {
      // Anyone authenticated can read schedules
      allow read: if isAuthenticated();

      // Anyone authenticated can create schedules (role checked in app)
      allow create: if isAuthenticated() &&
                      request.resource.data.createdBy == request.auth.uid;

      // Only the creator can update their schedules
      allow update: if isAuthenticated() &&
                      resource.data.createdBy == request.auth.uid;

      // Only the creator can delete their schedules
      allow delete: if isAuthenticated() &&
                      resource.data.createdBy == request.auth.uid;
    }

    // Attendances collection
    match /attendances/{attendanceId} {
      // Anyone authenticated can read attendances
      allow read: if isAuthenticated();

      // Anyone authenticated can create attendance records for themselves
      allow create: if isAuthenticated() &&
                      request.resource.data.userId == request.auth.uid;

      // No updates allowed (attendance is immutable)
      allow update: if false;

      // Only the creator of the attendance or the creator of the schedule can delete
      allow delete: if isAuthenticated() &&
                      (resource.data.userId == request.auth.uid ||
                       request.auth.uid == resource.data.createdBy);
    }
  }
}

