rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to get user role
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    // Helper function to check if user is professor
    function isProfessor() {
      return isAuthenticated() && getUserRole() == "PROF";
    }

    // Helper function to check if user is student
    function isStudent() {
      return isAuthenticated() && getUserRole() == "ETUDIANT";
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own document
      allow read: if isAuthenticated() && request.auth.uid == userId;

      // Only allow creation during signup (typically handled by Cloud Functions)
      allow create: if isAuthenticated() && request.auth.uid == userId;

      // Users can update their own profile (except role)
      allow update: if isAuthenticated() &&
                      request.auth.uid == userId &&
                      request.resource.data.role == resource.data.role;

      // No delete allowed
      allow delete: if false;
    }

    // Schedules collection
    match /schedules/{scheduleId} {
      // Anyone authenticated can read schedules
      allow read: if isAuthenticated();

      // Only professors can create schedules
      allow create: if isProfessor() &&
                      request.resource.data.createdBy == request.auth.uid;

      // Only the creator can update their schedules
      allow update: if isAuthenticated() &&
                      resource.data.createdBy == request.auth.uid;

      // Only the creator can delete their schedules
      allow delete: if isAuthenticated() &&
                      resource.data.createdBy == request.auth.uid;
    }

    // Attendances collection
    match /attendances/{attendanceId} {
      // Anyone authenticated can read attendances
      allow read: if isAuthenticated();

      // Only students can create attendance records
      // And only for themselves
      // And only once per schedule
      allow create: if isStudent() &&
                      request.resource.data.userId == request.auth.uid &&
                      !exists(/databases/$(database)/documents/attendances/$(attendanceId));

      // No updates allowed (attendance is immutable)
      allow update: if false;

      // Only professors who created the schedule can delete attendance
      allow delete: if isProfessor() &&
                      get(/databases/$(database)/documents/schedules/$(resource.data.scheduleId)).data.createdBy == request.auth.uid;
    }
  }
}

